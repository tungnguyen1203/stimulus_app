<p id="notice"><%= notice %></p>

<h1>Animals</h1>
<div data-controller='animal'>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td><%= animal.name %></td>
          <td><%= animal.age %></td>
          <td><%= link_to 'Show', animal %></td>
          <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
          <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><a href="#", data-action="click->animal#abc">qweqw</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
<%= link_to 'New Animal', new_animal_path %>
